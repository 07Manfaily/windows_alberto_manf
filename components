import { useState } from 'react';
import { 
  Home, 
  BookOpen, 
  Calendar, 
  FolderOpen, 
  MessageSquare, 
  FileText, 
  Settings, 
  LogOut,
  Search,
  Bell,
  Mail,
  ChevronDown,
  Menu,
  X
} from 'lucide-react';

const Sidebar = ({ isOpen, onClose }) => {
  const [activeMenu, setActiveMenu] = useState('Dashboard');

  const menuItems = [
    { icon: Home, label: 'Dashboard', badge: null },
    { icon: BookOpen, label: 'Lessons', badge: '3' },
    { icon: Calendar, label: 'Schedule', badge: null },
    { icon: FolderOpen, label: 'Materials', badge: null },
    { icon: MessageSquare, label: 'Forum', badge: '12' },
    { icon: FileText, label: 'Assessments', badge: null },
    { icon: Settings, label: 'Settings', badge: null }
  ];

  const sidebarStyle = {
    position: 'fixed',
    left: isOpen ? '0' : '-280px',
    top: 0,
    width: '280px',
    height: '100vh',
    background: 'linear-gradient(180deg, #4F46E5 0%, #6366F1 100%)',
    transition: 'left 0.3s ease',
    zIndex: 1000,
    display: 'flex',
    flexDirection: 'column',
    boxShadow: '4px 0 20px rgba(0, 0, 0, 0.1)'
  };

  const logoContainerStyle = {
    padding: '24px',
    display: 'flex',
    alignItems: 'center',
    gap: '12px',
    borderBottom: '1px solid rgba(255, 255, 255, 0.1)'
  };

  const logoStyle = {
    width: '40px',
    height: '40px',
    backgroundColor: 'white',
    borderRadius: '12px',
    display: 'flex',
    alignItems: 'center',
    justifyContent: 'center',
    fontSize: '20px',
    fontWeight: 'bold',
    color: '#4F46E5'
  };

  const brandStyle = {
    fontSize: '24px',
    fontWeight: 'bold',
    color: 'white'
  };

  const menuContainerStyle = {
    flex: 1,
    padding: '24px 0',
    overflowY: 'auto'
  };

  const getMenuItemStyle = (isActive) => ({
    display: 'flex',
    alignItems: 'center',
    gap: '12px',
    padding: '14px 24px',
    margin: '4px 0 4px 16px',
    borderRadius: isActive ? '12px 0 0 12px' : '12px',
    cursor: 'pointer',
    transition: 'all 0.3s ease',
    backgroundColor: isActive ? 'white' : 'transparent',
    position: 'relative',
    marginRight: isActive ? '-16px' : '16px',
    paddingRight: isActive ? '40px' : '24px'
  });

  const menuLabelStyle = (isActive) => ({
    color: isActive ? '#1F2937' : 'white',
    fontSize: '15px',
    fontWeight: isActive ? '600' : '500',
    flex: 1
  });

  const badgeStyle = {
    backgroundColor: '#EF4444',
    color: 'white',
    fontSize: '11px',
    fontWeight: '600',
    padding: '2px 8px',
    borderRadius: '10px',
    minWidth: '20px',
    textAlign: 'center'
  };

  const logoutButtonStyle = {
    display: 'flex',
    alignItems: 'center',
    gap: '12px',
    padding: '14px 24px',
    margin: '16px',
    borderRadius: '12px',
    cursor: 'pointer',
    transition: 'all 0.3s ease',
    backgroundColor: 'rgba(255, 255, 255, 0.1)',
    border: '1px solid rgba(255, 255, 255, 0.2)'
  };

  const closeButtonStyle = {
    display: 'none',
    position: 'absolute',
    top: '24px',
    right: '24px',
    color: 'white',
    cursor: 'pointer'
  };

  return (
    <div style={sidebarStyle}>
      <div style={closeButtonStyle} onClick={onClose}>
        <X size={24} />
      </div>

      <div style={logoContainerStyle}>
        <div style={logoStyle}>S</div>
        <span style={brandStyle}>Smart</span>
      </div>

      <div style={menuContainerStyle}>
        {menuItems.map((item) => {
          const Icon = item.icon;
          const isActive = activeMenu === item.label;
          
          return (
            <div
              key={item.label}
              style={getMenuItemStyle(isActive)}
              onClick={() => setActiveMenu(item.label)}
              onMouseEnter={(e) => {
                if (!isActive) {
                  e.currentTarget.style.backgroundColor = 'rgba(255, 255, 255, 0.08)';
                }
              }}
              onMouseLeave={(e) => {
                if (!isActive) {
                  e.currentTarget.style.backgroundColor = 'transparent';
                }
              }}
            >
              <Icon size={20} style={{ color: isActive ? '#4F46E5' : 'white' }} />
              <span style={menuLabelStyle(isActive)}>{item.label}</span>
              {item.badge && <span style={badgeStyle}>{item.badge}</span>}
              
              {/* Courbes invers√©es pour l'√©l√©ment actif */}
              {isActive && (
                <>
                  {/* Courbe en haut √† droite */}
                  <div style={{
                    position: 'absolute',
                    top: '-20px',
                    right: 0,
                    width: '20px',
                    height: '20px',
                    backgroundColor: 'transparent',
                    borderBottomRightRadius: '20px',
                    boxShadow: '10px 10px 0 0 white'
                  }} />
                  
                  {/* Courbe en bas √† droite */}
                  <div style={{
                    position: 'absolute',
                    bottom: '-20px',
                    right: 0,
                    width: '20px',
                    height: '20px',
                    backgroundColor: 'transparent',
                    borderTopRightRadius: '20px',
                    boxShadow: '10px -10px 0 0 white'
                  }} />
                </>
              )}
            </div>
          );
        })}
      </div>

      <div
        style={logoutButtonStyle}
        onMouseEnter={(e) => {
          e.currentTarget.style.backgroundColor = 'rgba(255, 255, 255, 0.15)';
        }}
        onMouseLeave={(e) => {
          e.currentTarget.style.backgroundColor = 'rgba(255, 255, 255, 0.1)';
        }}
      >
        <LogOut size={20} style={{ color: 'white' }} />
        <span style={{ color: 'white', fontSize: '15px', fontWeight: '500' }}>
          Log Out
        </span>
      </div>
    </div>
  );
};

