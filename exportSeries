          }}
          onMouseEnter={(e) => e.currentTarget.style.transform = 'translateY(-5px)'}
          onMouseLeave={(e) => e.currentTarget.style.transform = 'translateY(0)'}
          >
            <div style={{
              background: stat.bg,
              padding: '15px',
              borderRadius: '10px'
            }}>
              <stat.icon size={28} color={stat.color} />
            </div>
            <div>
              <div style={{ fontSize: '14px', color: '#6b7280', marginBottom: '5px' }}>
                {stat.label}
              </div>
              <div style={{ fontSize: '28px', fontWeight: 'bold', color: '#1a202c' }}>
                {stat.value}
              </div>
            </div>
          </div>
        ))}
      </div>

      <div style={{ 
        background: 'white', 
        padding: '30px', 
        borderRadius: '12px',
        boxShadow: '0 2px 8px rgba(0,0,0,0.1)'
      }}>
        <h3 style={{ fontSize: '20px', marginBottom: '20px', color: '#1a202c' }}>
          Prochaines Assemblées Générales
        </h3>
        <div style={{ display: 'flex', flexDirection: 'column', gap: '15px' }}>
          {ags.slice(0, 3).map(ag => (
            <div key={ag.id} style={{
              padding: '20px',
              background: '#f9fafb',
              borderRadius: '8px',
              display: 'flex',
              justifyContent: 'space-between',
              alignItems: 'center'
            }}>
              <div>
                <div style={{ fontWeight: 'bold', fontSize: '16px', color: '#1a202c', marginBottom: '5px' }}>
                  {ag.code_ag}
                </div>
                <div style={{ fontSize: '14px', color: '#6b7280' }}>
                  {ag.nom_entreprise} • {new Date(ag.date_ag).toLocaleDateString('fr-FR')}
                </div>
              </div>
              <button style={{
                background: '#667eea',
                color: 'white',
                border: 'none',
                padding: '10px 20px',
                borderRadius: '6px',
                cursor: 'pointer',
                fontSize: '14px'
              }}>
                Voir détails
              </button>
            </div>
          ))}
        </div>
      </div>
    </div>
