import React, { useState, useRef, useEffect } from 'react';
import { Mail, User, FileText, X, Search, Loader, Paperclip } from 'lucide-react';

export default function EmailTable() {
  const [searchTerm, setSearchTerm] = useState('');
  const [searchBy, setSearchBy] = useState('all');
  const [emails, setEmails] = useState([]);
  const [loading, setLoading] = useState(false);
  const [hasMore, setHasMore] = useState(true);
  const [page, setPage] = useState(0);
  const [selectedEmail, setSelectedEmail] = useState(null);
  const dialogRef = useRef(null);
  const observerRef = useRef(null);
  const lastEmailRef = useRef(null);

  const LIMIT = 10;

  // Fonction pour générer des données fake basées sur votre schéma API
  const generateFakeEmails = (start, limit) => {
    const fakeEmails = [];
    const subjects = [
      "Réunion importante ce vendredi",
      "Mise à jour du projet Q4",
      "Invitation - Webinaire Tech 2025",
      "Votre facture est disponible",
      "Nouveau message de l'équipe",
      "Rapport mensuel - Octobre",
      "Confirmation de votre commande",
      "Newsletter hebdomadaire",
      "Demande de feedback",
      "Nouvelle fonctionnalité disponible"
    ];

    const domains = ["example.com", "company.fr", "tech.io", "startup.com", "business.net"];
    const names = ["Sophie Martin", "Thomas Dubois", "Marie Laurent", "Julien Petit", "Emma Rousseau", 
                   "Lucas Bernard", "Camille Moreau", "Antoine Simon", "Léa Durand", "Nicolas Lefebvre"];

    for (let i = start; i < start + limit; i++) {
      const name = names[i % names.length];
      const email = `${name.toLowerCase().replace(' ', '.')}@${domains[i % domains.length]}`;
      const subject = subjects[i % subjects.length];
      
      // Générer des URLs de fichiers fake ou des données base64
      const attachments = i % 3 === 0 ? [
        {
          name: "document.pdf",
          url: "data:application/pdf;base64,",
          size: "245 KB"
        },
        {
          name: "image.jpg",
          url: "data:image/jpeg;base64,",
          size: "12 KB"
        }
      ] : [];
      
      fakeEmails.push({
        id: `email-${i}`,
        data: {
          Bcc: ["bcc@example.com"],
          Cc: ["cc@example.com"],
          Subject: subject,
          "X-Priority": 1,
          attached_files: attachments.map(a => a.name),
          attachments: attachments,
          datetime: new Date(Date.now() - Math.random() * 30 * 24 * 60 * 60 * 1000).toISOString(),
          html: `
            <div style="font-family: Arial, sans-serif; padding: 20px; color: #333;">
              <h2 style="color: #0ea5e9;">Bonjour,</h2>
              <p>Ceci est le contenu HTML de l'email <strong>${subject}</strong>.</p>
              <p>Nous vous contactons concernant ${subject.toLowerCase()}. Voici les détails importants :</p>
              <ul>
                <li>Point important numéro 1</li>
                <li>Information cruciale numéro 2</li>
                <li>Action à effectuer numéro 3</li>
              </ul>
              <p>N'hésitez pas à nous contacter pour plus d'informations.</p>
              <p style="margin-top: 30px;">Cordialement,<br><strong>${name}</strong></p>
            </div>
          `,
          receivers: [email]
        },
        result: {},
        text: `Bonjour, ceci est le contenu texte de l'email "${subject}". Nous vous contactons concernant des informations importantes. Cordialement, ${name}`,
        ok: true,
        username: email,
        displayName: name
      });
    }
    
    return fakeEmails;
  };

  // Charger les emails initiaux
  useEffect(() => {
    loadMoreEmails();
  }, []);

  // Charger plus d'emails (simulation API)
  const loadMoreEmails = async () => {
    if (loading || !hasMore) return;
    
    setLoading(true);
    
    // Simulation d'un appel API avec délai
    await new Promise(resolve => setTimeout(resolve, 800));
    
    const newEmails = generateFakeEmails(page * LIMIT, LIMIT);
    
    if (newEmails.length < LIMIT) {
      setHasMore(false);
    }
    
    setEmails(prev => [...prev, ...newEmails]);
    setPage(prev => prev + 1);
    setLoading(false);
  };

  // Infinite scroll observer
  useEffect(() => {
    if (loading) return;
    
    if (observerRef.current) observerRef.current.disconnect();
    
    observerRef.current = new IntersectionObserver(entries => {
      if (entries[0].isIntersecting && hasMore) {
        loadMoreEmails();
      }
    });
    
    if (lastEmailRef.current) {
      observerRef.current.observe(lastEmailRef.current);
    }
    
    return () => {
      if (observerRef.current) observerRef.current.disconnect();
    };
  }, [loading, hasMore, emails]);

  // Filtrer les emails
  const filteredEmails = emails.filter(email => {
    const search = searchTerm.toLowerCase();
    if (!search) return true;
    
    if (searchBy === 'objet') {
      return email.data.Subject.toLowerCase().includes(search);
    } else if (searchBy === 'participant') {
      return email.username.toLowerCase().includes(search) || 
             email.displayName.toLowerCase().includes(search);
    } else {
      return email.data.Subject.toLowerCase().includes(search) || 
             email.username.toLowerCase().includes(search) ||
             email.displayName.toLowerCase().includes(search);
    }
  });

  useEffect(() => {
    if (selectedEmail && dialogRef.current) {
      dialogRef.current.showModal();
    }
  }, [selectedEmail]);

  const closeDialog = () => {
    if (dialogRef.current) {
      dialogRef.current.close();
    }
    setSelectedEmail(null);
  };

  const downloadAttachment = (attachment) => {
    const link = document.createElement('a');
    link.href = attachment.url;
    link.download = attachment.name;
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
  };

  return (
    <div style={{
      minHeight: '100vh',
      background: 'linear-gradient(135deg, #0ea5e9 0%, #06b6d4 50%, #10b981 100%)',
      padding: '40px 20px',
      fontFamily: '-apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif'
    }}>
      <div style={{
        maxWidth: '1200px',
        margin: '0 auto'
      }}>
        {/* Header */}
        <div style={{
          textAlign: 'center',
          marginBottom: '40px',
          color: 'white'
        }}>
          <div style={{
            display: 'inline-flex',
            alignItems: 'center',
            gap: '12px',
            marginBottom: '12px'
          }}>
            <Mail size={40} />
            <h1 style={{
              fontSize: '2.5rem',
              fontWeight: '700',
              margin: '0'
            }}>Boîte de Réception</h1>
          </div>
          <p style={{
            fontSize: '1.1rem',
            opacity: '0.9',
            margin: '0'
          }}>Gérez vos emails en toute simplicité</p>
        </div>

        {/* Search Bar */}
        <div style={{
          background: 'rgba(255, 255, 255, 0.95)',
          borderRadius: '20px',
          padding: '25px',
          marginBottom: '25px',
          boxShadow: '0 10px 30px rgba(0, 0, 0, 0.2)',
          backdropFilter: 'blur(10px)'
        }}>
          <div style={{
            display: 'flex',
            gap: '15px',
            alignItems: 'center',
            flexWrap: 'wrap'
          }}>
            <div style={{
              flex: '1',
              minWidth: '250px',
              position: 'relative'
            }}>
              <Search 
                size={20} 
                style={{
                  position: 'absolute',
                  left: '15px',
                  top: '50%',
                  transform: 'translateY(-50%)',
                  color: '#0ea5e9',
                  pointerEvents: 'none'
                }}
              />
              <input
                type="text"
                placeholder="Rechercher un email..."
                value={searchTerm}
                onChange={(e) => setSearchTerm(e.target.value)}
                style={{
                  width: '100%',
                  padding: '14px 20px 14px 45px',
                  border: '2px solid #e2e8f0',
                  borderRadius: '12px',
                  fontSize: '1rem',
                  outline: 'none',
                  transition: 'all 0.3s ease',
                  fontFamily: 'inherit'
                }}
                onFocus={(e) => {
                  e.target.style.borderColor = '#0ea5e9';
                  e.target.style.boxShadow = '0 0 0 3px rgba(14, 165, 233, 0.1)';
                }}
                onBlur={(e) => {
                  e.target.style.borderColor = '#e2e8f0';
                  e.target.style.boxShadow = 'none';
                }}
              />
            </div>
            
            <div style={{
              display: 'flex',
              gap: '10px',
              flexWrap: 'wrap'
            }}>
              {['all', 'objet', 'participant'].map((filter) => (
                <button
                  key={filter}
                  onClick={() => setSearchBy(filter)}
                  style={{
                    padding: '12px 24px',
                    border: 'none',
                    borderRadius: '12px',
                    fontSize: '0.9rem',
                    fontWeight: '600',
                    cursor: 'pointer',
                    transition: 'all 0.3s ease',
                    background: searchBy === filter 
                      ? 'linear-gradient(135deg, #0ea5e9 0%, #06b6d4 100%)'
                      : '#f1f5f9',
                    color: searchBy === filter ? 'white' : '#475569',
                    boxShadow: searchBy === filter 
                      ? '0 4px 15px rgba(14, 165, 233, 0.3)'
                      : 'none',
                    textTransform: 'capitalize'
                  }}
                  onMouseEnter={(e) => {
                    if (searchBy !== filter) {
                      e.currentTarget.style.background = '#e2e8f0';
                    }
                  }}
                  onMouseLeave={(e) => {
                    if (searchBy !== filter) {
                      e.currentTarget.style.background = '#f1f5f9';
                    }
                  }}
                >
                  {filter === 'all' ? 'Tout' : filter === 'objet' ? 'Objet' : 'Participant'}
                </button>
              ))}
            </div>
          </div>
          
          {searchTerm && (
            <div style={{
              marginTop: '15px',
              padding: '10px 15px',
              background: 'linear-gradient(135deg, rgba(14, 165, 233, 0.1) 0%, rgba(16, 185, 129, 0.1) 100%)',
              borderRadius: '8px',
              color: '#0369a1',
              fontSize: '0.9rem',
              fontWeight: '500'
            }}>
              {filteredEmails.length} résultat{filteredEmails.length !== 1 ? 's' : ''} trouvé{filteredEmails.length !== 1 ? 's' : ''}
            </div>
          )}
        </div>

        {/* Table Container */}
        <div style={{
          background: 'rgba(255, 255, 255, 0.95)',
          borderRadius: '20px',
          boxShadow: '0 20px 60px rgba(0, 0, 0, 0.3)',
          overflow: 'hidden',
          backdropFilter: 'blur(10px)',
          maxHeight: '70vh',
          overflowY: 'auto'
        }}>
          <div style={{
            overflowX: 'auto'
          }}>
            <table style={{
              width: '100%',
              borderCollapse: 'collapse'
            }}>
              <thead style={{
                position: 'sticky',
                top: 0,
                zIndex: 10
              }}>
                <tr style={{
                  background: 'linear-gradient(135deg, #0ea5e9 0%, #06b6d4 50%, #10b981 100%)',
                  color: 'white'
                }}>
                  <th style={{
                    padding: '20px',
                    textAlign: 'left',
                    fontWeight: '600',
                    fontSize: '0.95rem',
                    letterSpacing: '0.5px',
                    textTransform: 'uppercase',
                    width: '25%'
                  }}>
                    <div style={{
                      display: 'flex',
                      alignItems: 'center',
                      gap: '8px'
                    }}>
                      <User size={18} />
                      <span>Destinataire</span>
                    </div>
                  </th>
                  <th style={{
                    padding: '20px',
                    textAlign: 'left',
                    fontWeight: '600',
                    fontSize: '0.95rem',
                    letterSpacing: '0.5px',
                    textTransform: 'uppercase',
                    width: '30%'
                  }}>
                    <div style={{
                      display: 'flex',
                      alignItems: 'center',
                      gap: '8px'
                    }}>
                      <Mail size={18} />
                      <span>Objet</span>
                    </div>
                  </th>
                  <th style={{
                    padding: '20px',
                    textAlign: 'left',
                    fontWeight: '600',
                    fontSize: '0.95rem',
                    letterSpacing: '0.5px',
                    textTransform: 'uppercase',
                    width: '45%'
                  }}>
                    <div style={{
                      display: 'flex',
                      alignItems: 'center',
                      gap: '8px'
                    }}>
                      <FileText size={18} />
                      <span>Contenu</span>
                    </div>
                  </th>
                </tr>
              </thead>
              <tbody>
                {filteredEmails.length === 0 && !loading ? (
                  <tr>
                    <td 
                      colSpan="3" 
                      style={{
                        padding: '40px',
                        textAlign: 'center',
                        color: '#64748b',
                        fontSize: '1.1rem'
                      }}
                    >
                      <Mail size={48} style={{ opacity: 0.3, marginBottom: '10px' }} />
                      <div>Aucun email trouvé</div>
                    </td>
                  </tr>
                ) : (
                  filteredEmails.map((email, index) => (
                    <tr 
                      key={email.id}
                      ref={index === filteredEmails.length - 1 ? lastEmailRef : null}
                      onClick={() => setSelectedEmail(email)}
                      style={{
                        background: index % 2 === 0 ? 'white' : 'rgba(14, 165, 233, 0.03)',
                        cursor: 'pointer',
                        transition: 'all 0.3s ease',
                        borderBottom: '1px solid rgba(14, 165, 233, 0.1)'
                      }}
                      onMouseEnter={(e) => {
                        e.currentTarget.style.background = 'rgba(14, 165, 233, 0.1)';
                        e.currentTarget.style.transform = 'scale(1.01)';
                      }}
                      onMouseLeave={(e) => {
                        e.currentTarget.style.background = index % 2 === 0 ? 'white' : 'rgba(14, 165, 233, 0.03)';
                        e.currentTarget.style.transform = 'scale(1)';
                      }}
                    >
                      <td style={{
                        padding: '18px 20px'
                      }}>
                        <div style={{ color: '#0ea5e9', fontWeight: '600', fontSize: '0.95rem' }}>
                          {email.displayName}
                        </div>
                        <div style={{ color: '#64748b', fontSize: '0.85rem', marginTop: '2px' }}>
                          {email.username}
                        </div>
                      </td>
                      <td style={{
                        padding: '18px 20px'
                      }}>
                        <div style={{ color: '#2d3748', fontWeight: '600', fontSize: '0.95rem', marginBottom: '4px' }}>
                          {email.data.Subject}
                        </div>
                        {email.data.attached_files.length > 0 && (
                          <div style={{
                            display: 'flex',
                            alignItems: 'center',
                            gap: '4px',
                            color: '#64748b',
                            fontSize: '0.8rem'
                          }}>
                            <Paperclip size={14} />
                            <span>{email.data.attached_files.length} pièce{email.data.attached_files.length > 1 ? 's' : ''} jointe{email.data.attached_files.length > 1 ? 's' : ''}</span>
                          </div>
                        )}
                      </td>
                      <td style={{
                        padding: '18px 20px',
                        color: '#4a5568',
                        fontSize: '0.9rem',
                        lineHeight: '1.5'
                      }}>
                        <div style={{
                          maxHeight: '60px',
                          overflow: 'hidden',
                          textOverflow: 'ellipsis',
                          display: '-webkit-box',
                          WebkitLineClamp: '2',
                          WebkitBoxOrient: 'vertical'
                        }}>
                          {email.text}
                        </div>
                      </td>
                    </tr>
                  ))
                )}
                {loading && (
                  <tr>
                    <td colSpan="3" style={{ padding: '30px', textAlign: 'center' }}>
                      <Loader size={32} style={{ 
                        color: '#0ea5e9',
                        animation: 'spin 1s linear infinite'
                      }} />
                      <div style={{ marginTop: '10px', color: '#64748b' }}>Chargement...</div>
                    </td>
                  </tr>
                )}
              </tbody>
            </table>
          </div>
        </div>
      </div>

      {/* Dialog HTML5 */}
      <dialog 
        ref={dialogRef}
        onClick={(e) => {
          if (e.target === dialogRef.current) {
            closeDialog();
          }
        }}
        style={{
          border: 'none',
          borderRadius: '20px',
          padding: '0',
          maxWidth: '800px',
          width: '90%',
          maxHeight: '85vh',
          boxShadow: '0 25px 50px rgba(0, 0, 0, 0.3)',
          background: 'white',
          overflow: 'visible'
        }}
      >
        {selectedEmail && (
          <div style={{
            padding: '30px',
            position: 'relative',
            maxHeight: '85vh',
            overflowY: 'auto'
          }}>
            {/* Close Button */}
            <button
              onClick={closeDialog}
              style={{
                position: 'sticky',
                top: '10px',
                float: 'right',
                background: 'linear-gradient(135deg, #0ea5e9 0%, #06b6d4 100%)',
                border: 'none',
                borderRadius: '50%',
                width: '40px',
                height: '40px',
                display: 'flex',
                alignItems: 'center',
                justifyContent: 'center',
                cursor: 'pointer',
                color: 'white',
                transition: 'all 0.3s ease',
                boxShadow: '0 4px 12px rgba(14, 165, 233, 0.3)',
                zIndex: 10
              }}
              onMouseEnter={(e) => {
                e.currentTarget.style.transform = 'scale(1.1) rotate(90deg)';
                e.currentTarget.style.boxShadow = '0 6px 20px rgba(14, 165, 233, 0.4)';
              }}
              onMouseLeave={(e) => {
                e.currentTarget.style.transform = 'scale(1) rotate(0deg)';
                e.currentTarget.style.boxShadow = '0 4px 12px rgba(14, 165, 233, 0.3)';
              }}
            >
              <X size={20} />
            </button>

            {/* Email Header */}
            <div style={{
              marginBottom: '25px'
            }}>
              <h2 style={{
                background: 'linear-gradient(135deg, #0ea5e9 0%, #10b981 100%)',
                WebkitBackgroundClip: 'text',
                WebkitTextFillColor: 'transparent',
                fontSize: '1.8rem',
                fontWeight: '700',
                margin: '0 0 15px 0',
                lineHeight: '1.3'
              }}>
                {selectedEmail.data.Subject}
              </h2>
              <div style={{
                display: 'flex',
                flexDirection: 'column',
                gap: '8px',
                color: '#718096',
                fontSize: '0.9rem'
              }}>
                <div style={{ display: 'flex', alignItems: 'center', gap: '10px' }}>
                  <User size={18} style={{ color: '#0ea5e9' }} />
                  <span>De : <strong style={{ color: '#0ea5e9' }}>{selectedEmail.displayName}</strong> ({selectedEmail.username})</span>
                </div>
                <div style={{ paddingLeft: '28px', fontSize: '0.85rem' }}>
                  {new Date(selectedEmail.data.datetime).toLocaleString('fr-FR')}
                </div>
                {selectedEmail.data.attached_files.length > 0 && (
                  <div style={{
                    display: 'flex',
                    alignItems: 'center',
                    gap: '10px',
                    paddingLeft: '28px',
                    marginTop: '10px'
                  }}>
                    <Paperclip size={16} style={{ color: '#0ea5e9' }} />
                    <div style={{ display: 'flex', gap: '8px', flexWrap: 'wrap' }}>
                      {selectedEmail.data.attachments.map((file, idx) => (
                        <button
                          key={idx}
                          onClick={(e) => {
                            e.stopPropagation();
                            downloadAttachment(file);
                          }}
                          style={{
                            background: 'linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%)',
                            padding: '8px 16px',
                            borderRadius: '8px',
                            fontSize: '0.85rem',
                            color: '#475569',
                            border: '1px solid #cbd5e1',
                            cursor: 'pointer',
                            transition: 'all 0.3s ease',
                            display: 'flex',
                            alignItems: 'center',
                            gap: '6px',
                            fontWeight: '500'
                          }}
                          onMouseEnter={(e) => {
                            e.currentTarget.style.background = 'linear-gradient(135deg, #0ea5e9 0%, #06b6d4 100%)';
                            e.currentTarget.style.color = 'white';
                            e.currentTarget.style.transform = 'translateY(-2px)';
                            e.currentTarget.style.boxShadow = '0 4px 12px rgba(14, 165, 233, 0.3)';
                          }}
                          onMouseLeave={(e) => {
                            e.currentTarget.style.background = 'linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%)';
                            e.currentTarget.style.color = '#475569';
                            e.currentTarget.style.transform = 'translateY(0)';
                            e.currentTarget.style.boxShadow = 'none';
                          }}
                        >
                          <Paperclip size={14} />
                          <span>{file.name}</span>
                          <span style={{ fontSize: '0.75rem', opacity: '0.7' }}>({file.size})</span>
                        </button>
                      ))}
                    </div>
                  </div>
                )}
              </div>
            </div>

            {/* Email HTML Content */}
            <div style={{
              background: 'linear-gradient(135deg, rgba(14, 165, 233, 0.02) 0%, rgba(16, 185, 129, 0.02) 100%)',
              borderLeft: '4px solid #0ea5e9',
              borderRadius: '12px',
              padding: '25px',
              minHeight: '200px'
            }}>
              <div dangerouslySetInnerHTML={{ __html: selectedEmail.data.html }} />
            </div>
          </div>
        )}
      </dialog>

      <style>{`
        dialog::backdrop {
          background: rgba(0, 0, 0, 0.6);
          backdrop-filter: blur(5px);
          animation: fadeIn 0.3s ease;
        }
        
        @keyframes fadeIn {
          from {
            opacity: 0;
          }
          to {
            opacity: 1;
          }
        }
        
        @keyframes spin {
          from {
            transform: rotate(0deg);
          }
          to {
            transform: rotate(360deg);
          }
        }
        
        dialog[open] {
          animation: slideIn 0.3s ease;
        }
        
        @keyframes slideIn {
          from {
            opacity: 0;
            transform: scale(0.9) translateY(-20px);
          }
          to {
            opacity: 1;
            transform: scale(1) translateY(0);
          }
        }
      `}</style>
    </div>
  );
}
